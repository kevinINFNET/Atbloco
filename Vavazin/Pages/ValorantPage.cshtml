@page
@model Vavazin.Pages.ValorantPageModel

<h2></h2>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control search-bar" placeholder="Buscar anúncios" asp-for="SearchTerm" aria-label="Buscar anúncios">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>

<h3>Anúncios Destaque</h3>
<div class="row">
    @foreach (var destaque in Model.Destaques)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@destaque.ImagemUrl" class="card-img-top" alt="Anúncio @destaque.Titulo">
                <div class="card-body">
                    <h5 class="card-title">@destaque.Titulo</h5>
                    <p class="card-text">@destaque.Descricao</p>
                    <p class="card-text">Avaliações: @destaque.Avaliacoes.Count()</p>
                    <a href="/DetalhesAnuncio/@destaque.Id" class="btn btn-primary">Ver Detalhes</a>
                    <a href="/TransacaoFinanceira" class="btn btn-success">Comprar</a>
                </div>
            </div>
        </div>
    }
</div>


<hr style="border: 1px solid #534; margin: 20px 0;">

<style>
    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    
    .search-bar {
        border: 2px solid black; 
        border-radius: 0.25rem; 
        padding: 0.5rem; 
    }
</style>

<div class="row">
    @foreach (var anuncio in Model.Anuncios)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@anuncio.ImagemUrl" class="card-img-top" alt="Anúncio @anuncio.Titulo">
                <div class="card-body">
                    <h5 class="card-title">@anuncio.Titulo</h5>
                    <p class="card-text">@anuncio.Descricao</p>
                    <a href="/DetalhesAnuncio/@anuncio.Id" class="btn btn-primary">Ver Detalhes</a>
                    <a href="/TransacaoFinanceira" class="btn btn-success">Comprar</a>
                    <a asp-page="./Delete" asp-route-id="@anuncio.Id" class="btn btn-danger">Excluir</a>
                </div>
            </div>
        </div>
    }
</div>
