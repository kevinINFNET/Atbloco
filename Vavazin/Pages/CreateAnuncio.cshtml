@page
@model Vavazin.Pages.CreateAnuncioModel
@{
    ViewData["Title"] = "Criar Anúncio";
}

<h2>Criar Anúncio</h2>

<form method="post">
    <div class="form-group">
        <label>Título</label>
        <input type="text" asp-for="Anuncio.Titulo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <textarea asp-for="Anuncio.Descricao" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label>URL da Imagem</label>
        <input type="text" asp-for="Anuncio.ImagemUrl" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Criar Anúncio</button>
</form>
