@page
@model Vavazin.Pages.RegisterModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="text-center">Registrar</h2>

        <form method="post" class="form-signin">
            <div class="form-group mb-3">
                <label for="Nome" class="form-label">Nome</label>
                <input type="text" id="Nome" class="form-control" asp-for="Usuario.Nome" placeholder="Digite seu nome" required />
            </div>
            <div class="form-group mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" class="form-control" asp-for="Usuario.Email" placeholder="Digite seu email" required />
            </div>
            <div class="form-group mb-3">
                <label for="Senha" class="form-label">Senha</label>
                <input type="password" id="Senha" class="form-control" asp-for="Usuario.Senha" placeholder="Digite sua senha" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Registrar</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Login">Já tem uma conta? Faça login</a>
        </div>
    </div>
</div>
